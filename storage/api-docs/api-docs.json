{
    "openapi": "3.0.0",
    "info": {
        "title": "LKHDATAR API",
        "description": "API documentation for LKHDATAR project",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost",
            "description": "Local Development Server"
        }
    ],
    "paths": {
        "/api/articles": {
            "get": {
                "tags": [
                    "Articles"
                ],
                "summary": "Get filtered articles",
                "operationId": "11aa4cc6561a7b94c56d1201d62513ee",
                "parameters": [
                    {
                        "name": "per_page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 10
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of articles"
                    }
                }
            }
        },
        "/api/articles/meta": {
            "get": {
                "tags": [
                    "Articles"
                ],
                "summary": "Get article filter metadata",
                "operationId": "96792a521ef881cf96c2680211aa9a0f",
                "responses": {
                    "200": {
                        "description": "Filter metadata"
                    }
                }
            }
        },
        "/api/preferences": {
            "get": {
                "tags": [
                    "Preferences"
                ],
                "summary": "Get user preferences",
                "description": "Returns saved preferences for the authenticated user.",
                "operationId": "110d923e543e89f784b93e143ae4825a",
                "responses": {
                    "200": {
                        "description": "Preference retrieved successfully"
                    },
                    "401": {
                        "description": "User not resolved"
                    }
                }
            },
            "post": {
                "tags": [
                    "Preferences"
                ],
                "summary": "Store user preferences",
                "description": "Saves or updates user news preferences (sources, categories, authors).",
                "operationId": "e524a1863fe3fc97946c79487476ad18",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "sources": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "example": [
                                            "guardian",
                                            "newsapi"
                                        ]
                                    },
                                    "categories": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "example": [
                                            "technology",
                                            "business"
                                        ]
                                    },
                                    "authors": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "example": [
                                            "John Doe"
                                        ]
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Preferences saved successfully"
                    },
                    "401": {
                        "description": "User not resolved"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Preferences"
                ],
                "summary": "Clear user preferences",
                "description": "Removes all saved preferences for the authenticated user.",
                "operationId": "9076b84ae7f6047e4f4698e5ef385e10",
                "responses": {
                    "200": {
                        "description": "Preferences cleared successfully"
                    },
                    "401": {
                        "description": "User not resolved"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Articles",
            "description": "Articles"
        },
        {
            "name": "Preferences",
            "description": "Preferences"
        }
    ]
}